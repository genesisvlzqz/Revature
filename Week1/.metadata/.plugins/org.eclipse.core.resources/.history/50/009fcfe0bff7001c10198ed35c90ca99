package com.revature.models;

public class Person {
	public String name;
	public String hairColor;
	public String gender;
	
	public String sleep(String words) {
		return "Person sleeptalks " + words;
	}
	
	public Person() {
		this.name = "Daniel";
		this.hairColor = "Black";
		this.gender = "Male";
	}
	Person(String name, String haircolor, String gender){
		this.name = name;
		this.hairColor = haircolor;
		this.gender = gender;
		
	}
}
